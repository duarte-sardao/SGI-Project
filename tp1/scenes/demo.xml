<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.15" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
      <transformation id="y90rot">
        <rotate axis="y" angle="90" />
      </transformation>
      <transformation id="x90rot">
        <rotate axis="x" angle="-90" />
      </transformation>
      <transformation id="invert">
        <scale x="-1" y="-1" z="-1" />
      </transformation>
    </transformations>

    <primitives>
      <primitive id="backWall">
        <rectangle x1="0" y1="0" x2="20" y2="10" />
      </primitive>
      <primitive id="sideWall">
        <rectangle x1="0" y1="0" x2="10" y2="10" />
      </primitive>
      <primitive id="floor">
        <rectangle x1="0" y1="0" x2="20" y2="10" />
      </primitive>
  </primitives>

    <components>
      
        <component id="sceneRoot">
          <transformation>
            <translate x="0" y="0" z="0"/>
          </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
          <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
              <componentref id="walls" />
            </children>
        </component>
      
      <component id="walls">
        <transformation>
          <translate x="0" y="0" z="0"/>
        </transformation>
        <materials>
            <material id="inherit" />
        </materials>
        <texture id="inherit" length_s="1" length_t="1"/>
        <children>
          <primitiveref id="backWall" />
          <componentref id="sideWallTrans" />
          <componentref id="floorTrans" />
        </children>
      </component>

      <component id="sideWallTrans">
        <materials>
            <material id="inherit" />
        </materials>
        <texture id="inherit" length_s="1" length_t="1"/>
        <transformation>
          <translate x="0" y="0" z="10" />
          <transformationref id="y90rot" />
        </transformation>
        <children>
          <primitiveref id="sideWall" />
        </children>
      </component>

      <component id="floorTrans">
        <materials>
            <material id="inherit" />
        </materials>
        <texture id="inherit" length_s="1" length_t="1"/>
        <transformation>
          <translate x="0" y="0" z="10" />
          <transformationref id="x90rot"/>
        </transformation>
        <children>
          <primitiveref id="floor" />
        </children>
      </component>
      
    </components>
</sxs>