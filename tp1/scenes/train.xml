<sxs>

     <!-- SCENE -->
    <scene root="rootComp" axis_length="5"/>


     <!-- VIEWS -->
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>


     <!-- AMBIENT -->
    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>


     <!-- LIGHTS -->
    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>


     <!-- TEXTURES -->
    <textures>
        <texture id="floorTexture" file="scenes/images/floor.jpg" />
        <texture id="lampShaftTexture" file="scenes/images/lampShaft.jpg" />
        <texture id="lampBulbTexture" file="scenes/images/lampBulb.jpg" />
        <texture id="barkTexture" file="scenes/images/bark.jpg" />
        <texture id="leavesTexture" file="scenes/images/leaves.jpg" />
    </textures>


     <!-- MATERIALS -->
    <materials>
        <material id="defaultMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>


     <!-- TRANSFORMATIONS -->
    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>


     <!-- PRIMITIVES -->
    <primitives>
        <!--Floor Primitives-->
            <primitive id="floorPrimLeft">
                <rectangle x1="0" y1="0" x2="2" y2="10"/>
            </primitive>

            <primitive id="floorPrimRailShaftRightSide">
                <rectangle x1="0" y1="0" x2="1" y2="10"/>
            </primitive>

            <primitive id="floorPrimRailShaftBottom">
                <rectangle x1="0" y1="0" x2="2" y2="10"/>
            </primitive>

            <primitive id="floorPrimRailShaftLeftSide">
                <rectangle x1="0" y1="0" x2="1" y2="10"/>
            </primitive>

            <primitive id="floorPrimRight">
                <rectangle x1="0" y1="0" x2="4" y2="10"/>
            </primitive>
        <!--Floor Primitives-->

        <!--Lamp Primitives-->
            <primitive id="lampPrimShaft">
                <cylinder base="0.10" top="0.10" height="3" slices="15" stacks="10"/>
            </primitive>

            <primitive id="lampPrimBulb">
                <sphere radius="0.15" slices="30" stacks="30"/>
            </primitive>
        <!--Lamp Primitives-->

        <!--Tree Primitives-->
            <primitive id="treePrimTrunk">
                <cylinder base="0.10" top="0.10" height="1" slices="15" stacks="10"/>
            </primitive>

            <primitive id="treePrimBody">
                <sphere radius="0.15" slices="30" stacks="30"/>
            </primitive>
        <!--Tree Primitives-->

        <!--House Primitives-->
            <primitive id="houseSmallWall">
                <rectangle x1="0" y1="0" x2="2" y2="3" />
            </primitive>
            <primitive id="houseBigWall">
                <rectangle x1="0" y1="0" x2="3" y2="3" />
            </primitive>
        <!--House Primitives-->

        <!-- Reference
            <rectangle x1="0" y1="0" x2="0" y2="0" />
            <triangle  x1="ff" y1="ff" z1="ff"
                       x2="ff" y2="ff" z2="ff"
                       x3="ff" y3="ff" z3="ff" />
            <cylinder base="ff" top="ff" height="ff" slices="ii" stacks="ii" />
            <sphere radius="ff" slices="ii" stacks="ii" />
            <torus inner="ff" outer="ff" slices="ii" loops="ii" />
        -->
    </primitives>


     <!-- COMPONENTS -->
    <components>

        <!-- Root Component -->
        <component id = "rootComp">
            <materials>
                <material id="defaultMaterial" />
            </materials>
            
            <texture id="none">

            <children>
                <componentRef id="floorComp" />
                <componentRef id="lampPostComp1" />
                <componentRef id="lampPostComp2" />
                <componentRef id="lampPostComp3" />
                <componentRef id="treeComp" />
                <componentRef id="houseComp" />
            </children>
        </component>


        <!-- Floor Component -->
        <component id="floorComp">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="floorTexture"/>

            <children>
                <componentRef id="floorCompLeft" />
                <componentRef id="floorCompShaftLeft" />
                <componentRef id="floorCompShaftBottom" />
                <componentRef id="floorCompShaftRight" />
                <componentRef id="floorCompRight" />
            </children>
        </component>

        <!-- Left Floor Component -->
        <component id="floorCompLeft">
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="floorPrimLeft" />
            </children>
        </component>

        <!-- Left Floor Shaft Component -->
        <component id="floorCompShaftLeft">
            <transformation>
                <rotate axis="y" angle="90" />
                <translate x="2" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="floorPrimShaftLeft" />
            </children>
        </component>

        <!-- Bottom Shaft Floor Component -->
        <component id="floorCompShaftBottom">
            <transformation>
                <translate x="2" y="0" z="-1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="floorPrimShaftBottom" />
            </children>
        </component>

        <!-- Right Floor Shaft Component -->
        <component id="floorCompShaftRight">
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="4" y="0" z="-1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="floorPrimShaftRight" />
            </children>
        </component>

        <!-- Right Floor Component -->
        <component id="floorCompRight">
            <transformation>
                <translate x="4" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="floorPrimRight" />
            </children>
        </component>


        <!-- Lamp 1 Component -->
        <component id="lampPost1">
            <!-- Set upright & position -->
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="1" y="2" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <componentRef id="lampCompShaft" />
                <componentRef id="lampCompBulb" />
            </children>
        </component>

        <!-- Lamp 2 Component -->
        <component id="lampPost2">
            <!-- Set upright & position -->
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="1" y="5" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <componentRef id="lampCompShaft" />
                <componentRef id="lampCompBulb" />
            </children>
        </component>

        <!-- Lamp 3 Component -->
        <component id="lampPost3">
            <!-- Set upright & position -->
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="1" y="8" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none"/>

            <children>
                <componentRef id="lampCompShaft" />
                <componentRef id="lampCompBulb" />
            </children>
        </component>

        <!-- Lamp Shaft Component -->
        <component id="lampCompShaft">
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="lampShaftTexture"/>

            <children>
                <primitiveRef id="lampPrimShaft" />
            </children>
        </component>

        <!-- Lamp Bulb Component -->
        <component id="lampCompBulb">
            <!-- Set above shaft (shaft height + bulb radius) -->
            <transformation>
                <translate x="0" y="0" z="3.10" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="lampBulbTexture"/>

            <children>
                <primitiveRef id="lampPrimBulb" />
            </children>
        </component>


        <!-- Tree Component -->
        <component id="treeComp">
            <!-- Set upright & position -->
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="6" y="2" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="treeTexture"/>

            <children>
                <componentRef id="treeTrunkComp" />
                <componentRef id="treeTopComp" />
            </children>
        </component>

        <!-- Tree Trunk Component -->
        <component id="treeTrunkComp">
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="barkTexture"/>

            <children>
                <primitiveRef id="treePrimTrunk" />
            </children>
        </component>

        <!-- Tree Top Component -->
        <component id="treeTopComp">
            <!-- Set above trunk (trunk height)-->
            <transformation>
                <translate x="0" y="0" z="1.0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="leavesTexture"/>

            <children>
                <primitiveRef id="treePrimBody" />
            </children>
        </component>


        <!--House Component-->
        <component id="houseComp">
            <!-- Set position -->
            <transformation>
                <translate x="5" y="5" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="houseTexture"/>

            <children>
                <componentRef id="houseLeftWall" />
                <componentRef id="houseRightWall" />
                <componentRef id="houseFrontWall" />
                <componentRef id="houseBackWall" />
            </children>
        </component>

        <!-- House Left Wall Component -->
        <component id="houseLeftWall">
            <!-- Rotate -->
            <transformation>
                <rotate axis="y" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveRef id="houseBigWall" />
            </children>
        </component>

        <!-- House Right Wall Component -->
        <component id="houseRightWall">
            <!-- Rotate and set postion -->
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="2" y="0" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveRef id="houseBigWall" />
            </children>
        </component>

        <!-- House Back Wall Component -->
        <component id="houseBackWall">
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveRef id="houseSmallWall" />
            </children>
        </component>

        <!--House Front Wall Component-->
        <component id="houseFrontWall">
            <!-- Set postion -->
            <transformation>
                <translate x="0" y="3" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveRef id="houseSmallWall" />
            </children>
        </component>
    </components>

</sxs>